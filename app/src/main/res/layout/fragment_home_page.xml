<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Welcome -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, User"
        android:textSize="22sp"
        android:textColor="@color/primary_color"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Search -->
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search by name or hobby"
            android:textColor="@android:color/black"
            android:textColorHint="#60EB5B78"
            android:textSize="16sp"
            android:drawableStart="@drawable/search"
            android:drawableTint="@color/primary_color"
            android:drawablePadding="8dp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- RecyclerView for profiles -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProfiles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingBottom="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/layoutSearch"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Premium overlay / No profiles -->
    <FrameLayout
        android:id="@+id/premiumOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutSearch"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvNoProfiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Youâ€™ve reached your daily swipe limit!"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnRefreshProfiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load More / Upgrade"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Fixed Match / Reject Buttons -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnReject"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_reject"
            android:background="@drawable/circle_drawable_reject"
            android:padding="12dp"/>

        <View
            android:layout_width="32dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/btnMatch"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_heart"
            android:background="@drawable/circle_background_match"
            android:padding="12dp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/unverifiedOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#AA000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp"
            android:background="@drawable/overlay_card_bg"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvOverlayMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify your account to unlock all features"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/btnVerifyAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify Now"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Unverified User Overlay -->


