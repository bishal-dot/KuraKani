<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Chat List Title -->
    <TextView
        android:id="@+id/tvChatListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chats"
        android:textColor="@color/primary_color"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <!-- Search Bar -->
    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Search users..."
        android:textColor="@color/primary_color"
        android:textColorHint="#99CCCCCC"
        android:imeOptions="actionSearch"
        android:inputType="text|textAutoComplete"
        android:background="@drawable/curved_rectangle"
        android:drawableStart="@drawable/ic_search"
        android:drawableEnd="@drawable/ic_reject"
        android:drawableTint="@color/primary_color"
        android:drawablePadding="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:completionThreshold="1"
        android:dropDownHeight="wrap_content"
        android:dropDownWidth="match_parent"
        android:dropDownVerticalOffset="8dp"
        android:dropDownHorizontalOffset="0dp"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="16dp"/>



    <!-- Empty State Layout -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="24dp">

        <ImageView
            android:id="@+id/ivEmptyState"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_no_matches"
            android:contentDescription="No chats"
            android:layout_marginBottom="16dp"
            app:tint="@color/primary_color" />

        <TextView
            android:id="@+id/tvEmptyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Chats Yet"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvEmptySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start a conversation by searching for users above."
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnStartChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Users"
            android:backgroundTint="@color/primary_color"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- RecyclerView for chat users -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChatList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"/>
</LinearLayout>
