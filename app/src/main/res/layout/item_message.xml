<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/ivMessageUserProfile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/default_avatar"
        android:contentDescription="User profile"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_shape"
        android:clipToOutline="true"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Message Bubble Container -->
    <LinearLayout
        android:id="@+id/messageBubbleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/ivMessageUserProfile"
        app:layout_constraintBottom_toBottomOf="@id/ivMessageUserProfile"
        app:layout_constraintStart_toEndOf="@id/ivMessageUserProfile"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:45 PM"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_marginBottom="2dp"
            android:visibility="gone"/>

        <!-- Bubble content -->
        <LinearLayout
            android:id="@+id/bubbleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_bubble_received">

            <!-- Message Text -->
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message text goes here"
                android:textColor="@android:color/white"
                android:maxWidth="250dp"
                android:textSize="16sp"
                android:visibility="gone"/>

            <!-- Message Image -->
            <ImageView
                android:id="@+id/ivMessageImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                android:contentDescription="Message image"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
