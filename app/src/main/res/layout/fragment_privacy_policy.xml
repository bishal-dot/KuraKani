<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with back button and title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/privacy_policy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Privacy Policy"
                android:textColor="@color/primary_color"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Last updated text -->
        <TextView
            android:id="@+id/last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:text="Last updated: July 3, 2025"
            android:textStyle="italic" />

        <!-- Introduction section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/privacy_policy_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/black"
                    android:text="This Privacy Policy describes how KuraKani (&quot;we,&quot; &quot;us,&quot; or &quot;our&quot;) collects, uses, and shares your personal information when you use our KuraKani dating application (the &quot;App&quot;). We are committed to protecting your privacy and handling your data in compliance with the Individual Privacy Act, 2075 (2018) of Nepal and other applicable laws."
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Information We Collect section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/data_collection_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Information We Collect"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/data_collection_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/black"
                    android:text="We collect various types of information to provide and improve our services to you:\n\n• Personal Information: This includes, but is not limited to, your name, age, gender, date of birth, contact information (email, phone number), photographs, marital status, and other details you provide in your profile.\n\n• Usage Data: Information about how you access and use the App, such as your interactions with other users, the features you use, and the time and duration of your activities.\n\n• Location Data: With your explicit consent, we may collect precise or approximate location information from your mobile device to suggest matches near you.\n\n• Messages: We collect the content of your messages exchanged through the App for safety and moderation purposes.\n\n• Information from Third-Party Services: If you link your KuraKani account with third-party services, we may receive information from those services."
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- How We Use Your Information section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/data_use_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. How We Use Your Information"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/data_use_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/black"
                    android:text="We use the collected information for various purposes, including:\n\n• To provide and maintain the App's functionality\n• To personalize your experience and suggest potential matches\n• To facilitate communication between users\n• To improve, analyze, and understand how you use our App\n• To ensure the security and integrity of the App\n• To send you notifications and updates\n• To comply with legal obligations"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Continue with similar card layouts for the remaining sections... -->

        <!-- Contact Us section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/contact_us_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Contact Us"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/contact_us_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/black"
                    android:text="If you have any questions or concerns about this Privacy Policy, please contact us:\n\nBy email: support@kurakani.com\nBy visiting this page on our website: [Link to your website's Privacy Policy page]"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>